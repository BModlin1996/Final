<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.baileymodlin.afinal.DashLightActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDashLightActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/batteryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/charge_system_trouble_indicator"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/brakeIcon"
        android:layout_marginStart="74dp" />

    <ImageView
        android:id="@+id/brakeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brake_trouble_indicator_canada"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        android:layout_marginStart="74dp" />

    <ImageView
        android:id="@+id/oilIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/oil_trouble_indicator"
        android:layout_marginRight="74dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="74dp" />

    <ImageView
        android:id="@+id/coolantIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/temperature_indicator"
        android:layout_marginRight="74dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/oilIcon"
        android:layout_marginEnd="74dp" />

    <ImageView
        android:id="@+id/tireIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tire_pressure_monitor2"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/airbagIcon"
        android:layout_marginStart="74dp" />

    <ImageView
        android:id="@+id/wipersIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/low_windshield_washer_fluid"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/securityIcon"
        android:layout_marginRight="74dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="74dp" />

    <ImageView
        android:id="@+id/airbagIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/airbag"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/batteryIcon"
        android:layout_marginStart="74dp" />

    <ImageView
        android:id="@+id/securityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lock"
        android:layout_marginRight="74dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="62dp"
        app:layout_constraintTop_toBottomOf="@+id/coolantIcon"
        android:layout_marginEnd="74dp" />

    <TextView
        android:id="@+id/brakeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="9dp"
        android:text="Parking break on/"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brakeIcon"
        android:layout_marginStart="56dp" />

    <TextView
        android:id="@+id/brakeFluidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:text="Low brake fluid/"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brakeText"
        android:layout_marginStart="56dp" />

    <TextView
        android:id="@+id/breakIssueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="Break issue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brakeText"
        android:layout_marginTop="34dp"
        android:layout_marginStart="56dp" />

    <TextView
        android:id="@+id/oilPressureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="74dp"
        android:layout_marginTop="8dp"
        android:text="Oil pressure"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oilIcon"
        android:layout_marginEnd="74dp" />

    <TextView
        android:id="@+id/battText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low battery voltage"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/batteryIcon"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp" />

    <TextView
        android:id="@+id/coolantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High coolant temp."
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/coolantIcon"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="48dp" />

    <TextView
        android:id="@+id/airbagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airbag issue"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/airbagIcon"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="63dp" />

    <TextView
        android:id="@+id/securityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security issue"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/securityIcon"
        android:layout_marginRight="62dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="62dp" />

    <TextView
        android:id="@+id/tireText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low tire pressure"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/tireIcon"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="52dp" />

    <TextView
        android:id="@+id/wiperText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low wiper fluid"
        android:layout_marginRight="62dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/wipersIcon" />

</android.support.constraint.ConstraintLayout>
